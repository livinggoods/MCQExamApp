<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ExamListActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#f5f5f5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trainee"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/tv_trainee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stephen Mwongela"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Training"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                style="@style/TextAppearance.AppCompat.Caption"/>

            <TextView
                android:id="@+id/tv_training"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thika Cohort 2"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pending Records"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Caption"/>

            <TextView
                android:id="@+id/tv_pending_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="28"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="5dp"
        android:text="Available Exams"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>

    <ListView
        android:id="@+id/lv_exams"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>